# Server port
PORT=3000

# Database connection URL (PostgreSQL or MongoDB)
DATABASE_URL="postgresql://user:password@localhost:5432/dbname"

# JWT secrets for access and refresh tokens
JWT_SECRET=supersecretkey
JWT_REFRESH_SECRET=refreshsecretkey

# Redis connection URL for caching/session storage
REDIS_URL=redis://localhost:6379

# RabbitMQ connection URL for inter-service communication
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# Email service credentials (for sending mails if applicable)
MAIL_USER=your-email@gmail.com
MAIL_HOST=smtp.gmail.com
MAIL_PASS=your-email-password
